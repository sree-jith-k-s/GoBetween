<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Gateway"
            android:layout_gravity="center"
            android:background="@drawable/payment_edittext"
            android:fontFamily="@font/poppins_semibold"
            android:padding="10dp"
            android:textColor="#7ed321"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Account"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#7ed321"
                android:textSize="20sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/payment_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:hint="Full Name"
                android:inputType="text"
                android:paddingStart="3dp" />

            <EditText
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/payment_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:hint="Nick Name"
                android:inputType="text"
                android:paddingStart="3dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Email"
                android:paddingStart="3dp"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:background="@drawable/payment_edittext"
                android:fontFamily="@font/poppins_semibold"
                android:inputType="textEmailAddress" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date of Birth"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gender"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <!-- Day -->
            <EditText
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/payment_edittext"
                android:hint="DD"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:layout_marginRight="5dp"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- Month -->
            <EditText
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/payment_edittext"
                android:hint="MM"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:layout_marginRight="5dp"
                android:padding="8dp"
                android:textAlignment="center" />

            <!-- Year -->
            <EditText
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/payment_edittext"
                android:hint="YYYY"
                android:saveEnabled="false"
                android:maxLength="4"
                android:maxLines="1"
                android:padding="8dp"
                android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="172dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RadioButton
                        android:id="@+id/male_radio_button"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_left_radiobutton"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:text="Male"
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/female_radio_button"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_right_radiobutton"
                        android:button="@android:color/transparent"
                        android:text="Female"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment Details"
                android:textColor="#7ed321"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/payment_method_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/credit_card_radio"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_left_radiobutton"
                android:button="@android:color/transparent"
                android:checked="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="   Credit Card"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/debit_card_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Debit Card"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:button="@android:color/transparent"
                android:background="@drawable/custom_right_radiobutton"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/card_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Card Number"
                android:drawableLeft="@drawable/baseline_credit_card_24"
                android:background="@drawable/payment_edittext"
                android:paddingStart="3dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/total_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="INR Total "
                android:drawableLeft="@drawable/baseline_currency_rupee_24"
                android:paddingStart="3dp"
                android:drawablePadding="8dp"
                android:background="@drawable/payment_edittext"
                android:fontFamily="@font/poppins_semibold"
                android:inputType="numberDecimal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/cvv"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/payment_edittext"
                android:drawableLeft="@drawable/cvv"
                android:paddingStart="3dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_semibold"
                android:hint="CVV"
                android:inputType="number" />
            <EditText
                android:id="@+id/exp_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="3dp"
                android:drawablePadding="8dp"
                android:hint="EXP DATE"
                android:drawableLeft="@drawable/baseline_edit_calendar_24"
                android:background="@drawable/payment_edittext"
                android:fontFamily="@font/poppins_semibold"
                android:inputType="number" />

        </LinearLayout>
        <Button
            android:id="@+id/pay_now"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:backgroundTint="@color/green"
            android:text="PAY NOW" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
